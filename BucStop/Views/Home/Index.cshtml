﻿@{
    ViewData["Title"] = "Home Page";
}

<!-- Unused file for games list.-->
@{
    List<Game> gamesList = new List<Game>();
    foreach (var game in Model)
    {
        gamesList.Add(game);
        //gamesList.Sort(gamesList.playcount);

    }
}
<div id="demo" class="carousel slide" data-bs-ride="carousel" style="margin-left: 100px; margin-right: 100px;">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

    <!-- Top 3 Games -->
    <h1>top games</h1>
    <!-- Game 1 -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="@Url.Action("Play", "Games", new { id = @gamesList[0].Id })" style="text-decoration: none;">
                <img src=@gamesList[0].Thumbnail alt="Game 1" class="d-block" style="width:100%; height:500%;">
            </a>
        </div>
    <!-- Game 2 -->
        <div class="carousel-item">
            <a href="@Url.Action("Play", "Games", new { id = @gamesList[1].Id })" style="text-decoration: none;">
                <img src=@gamesList[1].Thumbnail alt="Game 2" class="d-block" style="width:100%; height:500%;">
            </a>
        </div>
    <!-- Game 3 -->
        <div class="carousel-item">
            <a href="@Url.Action("Play", "Games", new { id = @gamesList[2].Id })" style="text-decoration: none;">
            <img src=@gamesList[2].Thumbnail alt="Game 3" class="d-block" style="width:100%; height:500%;">
            </a>
        </div>
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>


